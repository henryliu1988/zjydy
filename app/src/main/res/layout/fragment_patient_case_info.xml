<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical"
    android:paddingTop="10dp">

    <include layout="@layout/titlebar_layout_back_operate"/>
    <LinearLayout style="@style/item_info_read_singleline"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/name_title"
            android:text="患者姓名"
            style="@style/item_info_read_singleline_title" />
        <TextView
            android:id="@+id/name_value"
            style="@style/item_info_read_singleline_value" />
    </LinearLayout>
    <View style="@style/item_info_div_line" />

    <LinearLayout style="@style/item_info_read_singleline">
        <TextView
            android:id="@+id/sex_title"
            android:text="性别"
            style="@style/item_info_read_singleline_title" />
        <TextView
            android:id="@+id/sex_value"
            style="@style/item_info_read_singleline_value" />
    </LinearLayout>
    <View style="@style/item_info_div_line" />

    <LinearLayout style="@style/item_info_read_singleline">
        <TextView
            android:id="@+id/tel_title"
            android:text="联系方式"
            style="@style/item_info_read_singleline_title" />
        <TextView
            android:id="@+id/tel_value"
            style="@style/item_info_read_singleline_value" />
    </LinearLayout>
    <View style="@style/item_info_div_line" />

    <LinearLayout style="@style/item_info_read_singleline">
        <TextView
            android:id="@+id/birth_title"
            android:text="出生日期"
            style="@style/item_info_read_singleline_title" />
        <TextView
            android:id="@+id/birth_value"
            style="@style/item_info_read_singleline_value" />
    </LinearLayout>


    <LinearLayout style="@style/item_info_read_singleline"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/domain_title"
            android:text="所在地区"
            style="@style/item_info_read_singleline_title" />
        <TextView
            android:id="@+id/domain_value"
            style="@style/item_info_read_singleline_value" />
    </LinearLayout>
    <View style="@style/item_info_div_line" />


    <LinearLayout style="@style/item_info_read_singleline">
        <TextView
            android:id="@+id/hospital_title"
            android:text="所在医院"
            style="@style/item_info_read_singleline_title" />
        <TextView
            android:id="@+id/hospital_value"
            style="@style/item_info_read_singleline_value" />
    </LinearLayout>
    <View style="@style/item_info_div_line" />


    <LinearLayout style="@style/item_info_read_singleline">
        <TextView
            android:id="@+id/depart_title"
            android:text="所在科室"
            style="@style/item_info_read_singleline_title" />
        <TextView
            android:id="@+id/depart_value"
            style="@style/item_info_read_singleline_value" />
    </LinearLayout>
    <View style="@style/item_info_div_line" />

    <LinearLayout style="@style/item_info_read_singleline">
        <TextView
            android:id="@+id/doc_title"
            android:text="主治医师"
            style="@style/item_info_read_singleline_title" />
        <TextView
            android:id="@+id/doc_value"
            style="@style/item_info_read_singleline_value" />
    </LinearLayout>
    <View style="@style/item_info_div_line" />


    <LinearLayout style="@style/item_info_read_singleline">
        <TextView
            android:id="@+id/sick_title"
            android:text="疾病名称"
            style="@style/item_info_read_singleline_title" />
        <TextView
            android:id="@+id/sick_value"
            style="@style/item_info_read_singleline_value" />
    </LinearLayout>
    <View style="@style/item_info_div_line" />


    <LinearLayout style="@style/item_info_read_mutiline">
        <TextView
            android:id="@+id/sick_discript_title"
            android:text="疾病描述"
            style="@style/item_info_read_mutiline_title" />
        <TextView
            android:id="@+id/sick_discript_value"
            style="@style/item_info_read_mutiline_value" />
    </LinearLayout>
    <View style="@style/item_info_div_line" />



    <LinearLayout style="@style/item_info_read_mutiline">
        <TextView
            android:id="@+id/comment_title"
            android:text="备注"
            style="@style/item_info_read_mutiline_title" />
        <TextView
            android:id="@+id/comment_value"
            style="@style/item_info_read_mutiline_value" />
    </LinearLayout>
    <View style="@style/item_info_div_line" />


</LinearLayout>