<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/titlebar_layout_back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:text="认证状态"
        android:textColor="@color/black_text"
        android:textSize="17sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/step_upload"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_circle_identify2"
                android:gravity="center"
                android:maxEms="2"
                android:maxLines="2"
                android:text="未上传"
                android:textColor="@color/white_text"
                android:textSize="16sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_gravity="center"
                android:layout_weight="1"

                android:background="@drawable/dotted_line_gray"
                android:layerType="software" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_gravity="center"
                android:layout_weight="1"

                android:background="@drawable/dotted_line_gray"
                android:layerType="software" />

            <TextView
                android:id="@+id/step_wait_verify"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_circle_identify2"
                android:gravity="center"
                android:maxEms="2"
                android:maxLines="2"
                android:text="未审核"
                android:textColor="@color/white_text"
                android:textSize="16sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_gravity="center"
                android:layout_weight="1"

                android:background="@drawable/dotted_line_gray"
                android:layerType="software" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_gravity="center"
                android:layout_weight="1"

                android:background="@drawable/dotted_line_gray"
                android:layerType="software" />

            <TextView
                android:id="@+id/step_wait"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_circle_identify2"
                android:gravity="center"
                android:maxEms="2"
                android:maxLines="2"
                android:text="等待中"
                android:textColor="@color/white_text"
                android:textSize="16sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/dotted_line_gray"

                android:layerType="software" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/dotted_line_gray"
                android:layerType="software" />

            <TextView
                android:id="@+id/step_verify"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_circle_identify1"
                android:gravity="center"
                android:maxEms="2"
                android:maxLines="2"
                android:text="审核结果"
                android:textColor="@color/white_text"
                android:textSize="16sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:paddingLeft="35dp"
        android:paddingRight="35dp">

        <ImageView
            android:id="@+id/photo1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@mipmap/camera_outline"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/photo"
            android:layout_weight="4"/>
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <ImageView
            android:id="@+id/photo2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@mipmap/camera_outline"
            android:padding="2dp"
            android:src="@mipmap/photo"
            android:scaleType="fitCenter"
            android:layout_weight="4"/>

    </LinearLayout>

    <TextView
        android:id="@+id/edit_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/login_confirm_btn_bg"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="修改信息"
        android:textColor="@color/white_bg"
        android:textSize="17sp"

        />
</LinearLayout>