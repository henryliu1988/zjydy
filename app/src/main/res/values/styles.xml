<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="pagertab_icon_style">
        <item name="android:background">@drawable/tab_bg_normal</item>
        <item name="apTabBackground">@drawable/tab_bg_normal</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@drawable/tab_color_select</item>
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="apTabIndicatorColor">@color/home_bar_text_push</item>
        <item name="apTabUnderlineColor">#1A000000</item>
        <item name="apTabDividerColor">#00000000</item>
        <item name="apTabShouldExpand">false</item>
        <item name="apTabPaddingLeftRight">8dp</item>
        <item name="apTabPaddingTopBottom">6dp</item>
        <item name="apTabTextSelectColor">@color/home_bar_text_push</item>
    </style>

    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
    </style>

    <style name="mine_item_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">#FFF</item>
    </style>


    <style name="item_info_read_singleline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:background">#FFF</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="item_info_read_singleline_title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_gravity">left|center_vertical</item>
    </style>

    <style name="item_info_read_singleline_value">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">5</item>
        <item name="android:textColor">@color/black_text1</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_gravity">right|center_vertical</item>
    </style>

    <style name="item_info_edit_singleline_value">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">5</item>
        <item name="android:textColor">@color/black_text1</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>

    <style name="item_info_edit_singleline_flagimag">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@mipmap/ic_back_arrow</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="item_info_read_mutiline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:background">#FFF</item>
    </style>
    <style name="item_info_read_mutiline_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="item_info_read_mutiline_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_text1</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="item_info_edit_mutiline_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_text1</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="item_info_div_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:background">@color/div_line</item>
    </style>

    <style name="button_title_color_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:textColor">@color/white_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
